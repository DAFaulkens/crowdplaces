.video_sample
  iframe src="#{project.vimeo.embed_url}?title=0&amp;byline=0&amp;portrait=0&amp" width="461" height="258" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen
.info
  h3= title
  h2
    = link_to project.name, project_path(project)
  .author
    p
      = t('projects.box.by')
      |&nbsp;
      = link_to project.user.name, user_path(project.user)
  .description
    p= link_to truncate(project.headline, :length => 120), project_path(project)
  .author
    - if project.address_city || project.address_state
      p= link_to 'javascript:void(0)' do
        - unless project.address_city.blank?
          = project.address_city
        - unless project.address_state.blank?
            | &nbsp; / &nbsp;
            = project.address_state
  .statistics
    .progress
      .bar[style="width: #{project.display_progress}%"]
    ul
      li
        strong= "#{project.time_to_go[:time]} #{project.time_to_go[:unit]}"
        p= "#{project.remaining_text}"
      li
        strong= "#{project.progress}%"
        p="#{t('projects.project.reached')}"
      li.last
        strong= "#{project.display_pledged}"
        p= "#{t('projects.project.backed')}"
